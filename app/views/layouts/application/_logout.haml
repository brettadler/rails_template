.modal#logout-modal{ role: "dialog", tabindex: "-1" }

  .modal-dialog{ role: "document" }

    .modal-content

      .modal-header
        %h5.modal-title Logout Confirmation
        %button.close{ "aria-label": "Close", "data-dismiss": "modal", type: "button" }
          %span{ "aria-hidden": "true" } Ã—

      .modal-body
        .padded Please confirm you want to log out.

      .modal-footer
        .container
          .row
            .col
              %a.btn-modal-close{ "data-dismiss": "modal" } cancel
            .col
              = link_to "Yes, log out", destroy_user_session_path, method: :delete, class: "btn-modal-primary"
